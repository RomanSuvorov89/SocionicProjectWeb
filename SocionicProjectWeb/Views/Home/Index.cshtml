@{
	ViewBag.Title = "Home Page";
}
<html ng-app="AngularSocionic">
<head>
	<script type="text/javascript" src="http://vk.com/js/api/openapi.js?150"></script>
	<script type="text/javascript">
		VK.init({ apiId: 6261119 });
	</script>
	
	<script src="~/Scripts/angular/AngularTest.js" asp-append-version="true"></script>
</head>
<body style="text-align: center">
	<div class="row" style="margin-top: 5%; margin-bottom: 5%">
		<div class="col-sm-12" id="Quests">
			<div ng-controller="TestingController" data-toggle="buttons">
				<div>
					<p class="text-success" style="font-size: 20px; font-style: oblique"><strong>Выберите тот вариант ответа из предложенных, что больше характеризует Вас.</strong></p>
					<a style="margin-bottom: 3%; font-style: italic; font-weight: bold; font-size: 18px" class="btn disabled">
						Вопрос {{numberQuest+1}} из 28
					</a>
				</div>
				<div class="btn-group-lg">
					<button type="button" ng-click="checkAnswer(1)" class="btn {{Style[numberStyle]}}" style="width: 45%">{{firstValue[numberQuest]}}</button>
					<button type="button" ng-click="checkAnswer(0)" class="btn {{Style[numberStyle]}}" style="width: 45%">{{secondValue[numberQuest]}}</button>
				</div>
				<div ng-repeat="array in groupOfAnswers track by $index" style="display: none">
					{{array}}
				</div>
			</div>
		</div>
		<div class="col-sm-12" id="resultInfo"></div>
	</div>

	<div id="vk_auth"></div>

</body>
</html>

<script type="text/javascript">
	VK.Widgets.Auth("vk_auth", { "onAuth": "function(data) {alert('user '+data['uid']+' authorized');}" });
</script>

